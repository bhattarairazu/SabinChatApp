<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <!--<include layout="@layout/toolbar_chat"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="12.3dp"
        android:layout_marginRight="10.7dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/round_corners"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17.3dp"
            android:layout_weight="1"
            android:textColorHint="#2b2b2b"
            android:background="#00000000"
            android:hint="@string/search"
            android:textColor="#2b2b2b"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:layout_marginRight="12.8dp"
            android:src="@drawable/ic_search" />

    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/mlistview_activeusers"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>