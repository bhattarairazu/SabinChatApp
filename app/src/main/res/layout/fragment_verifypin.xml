<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    >



    <LinearLayout
        android:id="@+id/mlinearlayout_verifypin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/signup_input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            >

            <custom_font.MyEditText
                android:id="@+id/meditext_enterpin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_gravity="center"
                android:inputType="number"
                android:hint="Enter Your Pin" />


        </android.support.design.widget.TextInputLayout>



        <custom_font.MyTextView
            android:id="@+id/verify_pin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round"
            android:text="Verify Pin"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_above="@+id/bottom"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"/>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/mlinearlayout_newpassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/newpasswords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            >

            <custom_font.MyEditText
                android:id="@+id/meditext_newpasswords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_gravity="center"
                android:hint="Enter New Password" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/confirmnewpasswords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            >

            <custom_font.MyEditText
                android:id="@+id/meditext_conformnewpasswords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_gravity="center"
                android:hint="Confirm New Password" />


        </android.support.design.widget.TextInputLayout>

        <custom_font.MyTextView
            android:id="@+id/setpasswords_reset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round"
            android:text="Set Passwords"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_above="@+id/bottom"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"/>



    </LinearLayout>





</RelativeLayout>